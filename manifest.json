{
  "manifest_version": 3,
  "name": "PromptPin",
  "version": "1.2",
  "description": "Bookmark and quickly navigate to ChatGPT messages.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PromptPin",
    "default_icon": {
      "16": "assets/icons/prompt_pin_16x16.png",
      "48": "assets/icons/prompt_pin_48x48.png",
      "128": "assets/icons/prompt_pin_128x128.png"
    }
  },
  "icons": {
    "16": "assets/icons/prompt_pin_16x16.png",
    "48": "assets/icons/prompt_pin_48x48.png",
    "128": "assets/icons/prompt_pin_128x128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.svg"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ],
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
}
